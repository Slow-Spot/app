{
  "$schema": "https://raw.githubusercontent.com/evanbacon/apple-targets/main/schema/expo-target.config.schema.json",
  "type": "watch",
  "name": "SlowSpotWatch",
  "bundleIdentifier": ".watch",
  "deploymentTarget": "9.0",
  "entitlements": {
    "com.apple.developer.healthkit": true,
    "com.apple.developer.healthkit.background-delivery": true
  },
  "infoPlist": {
    "CFBundleDisplayName": "Slow Spot",
    "WKRunsIndependentlyOfCompanionApp": true,
    "WKWatchOnly": false,
    "NSHealthShareUsageDescription": "Slow Spot uses HealthKit to track your meditation sessions and mindfulness minutes.",
    "NSHealthUpdateUsageDescription": "Slow Spot saves your meditation sessions to HealthKit."
  },
  "icon": "./Resources/watch-icon.png",
  "frameworks": [
    "HealthKit",
    "WatchKit"
  ]
}
