{
  "cli": {
    "version": ">= 16.0.0",
    "appVersionSource": "remote",
    "promptToConfigurePushNotifications": false
  },
  "build": {
    "base": {
      "env": {
        "APP_ENV": "production"
      },
      "cache": {
        "disabled": false,
        "paths": ["node_modules"]
      },
      "ios": {
        "prebuildCommand": "npm run prebuild:clean"
      }
    },
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development",
      "env": {
        "APP_ENV": "development"
      },
      "ios": {
        "prebuildCommand": "npm run prebuild:clean",
        "simulator": true,
        "buildConfiguration": "Debug"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug"
      }
    },
    "preview": {
      "distribution": "internal",
      "channel": "preview",
      "env": {
        "APP_ENV": "preview"
      },
      "ios": {
        "prebuildCommand": "npm run prebuild:clean",
        "simulator": false,
        "resourceClass": "m-medium",
        "buildConfiguration": "Release",
        "autoIncrement": "buildNumber"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "autoIncrement": "versionCode"
      }
    },
    "production": {
      "extends": "base",
      "channel": "production",
      "ios": {
        "prebuildCommand": "npm run prebuild:clean",
        "resourceClass": "m-medium",
        "buildConfiguration": "Release",
        "autoIncrement": "buildNumber"
      },
      "android": {
        "buildType": "app-bundle",
        "autoIncrement": "versionCode"
      }
    },
    "production-simulator": {
      "extends": "base",
      "distribution": "internal",
      "ios": {
        "prebuildCommand": "npm run prebuild:clean",
        "simulator": true,
        "buildConfiguration": "Release"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "leszekszpunar@gmail.com",
        "appleTeamId": "QQHRMJ6B78",
        "ascApiKeyPath": "$ASC_API_KEY_PATH",
        "ascApiKeyIssuerId": "$ASC_API_KEY_ISSUER_ID",
        "ascApiKeyId": "$ASC_API_KEY_ID"
      },
      "android": {
        "serviceAccountKeyPath": "$GOOGLE_SERVICE_ACCOUNT_KEY_PATH",
        "track": "production",
        "releaseStatus": "draft",
        "changesNotSentForReview": false
      }
    }
  }
}
